<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4E1"
    tools:context=".winmain.MapActivity">

    <TextView
        android:id="@+id/textViewVisitedPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-medium"
        android:text="Посещенные страны"
        android:textColor="#2C3E50"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/visited_places_List"
        android:layout_width="364dp"
        android:layout_height="554dp"
        android:layout_below="@id/textViewVisitedPlaces"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/add_visited_place_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/bottom_navigation"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/inter"
        android:text="Add"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#DC74AE">

        <ImageButton
            android:id="@+id/places_button_pl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/places"
            android:contentDescription="@string/places_description"
            android:background="@null" />

        <ImageButton
            android:id="@+id/picture_button_pl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/picture"
            android:contentDescription="@string/picture_description"
            android:background="@null" />

        <ImageButton
            android:id="@+id/map_button_pl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/map"
            android:contentDescription="@string/map_description"
            android:background="@null" />

        <ImageButton
            android:id="@+id/account_button_pl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/account"
            android:contentDescription="@string/account_description"
            android:background="@null" />
    </LinearLayout>

</RelativeLayout>