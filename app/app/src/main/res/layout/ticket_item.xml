<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ticketclass"
    android:background="#FFE4E1"
    android:padding="16dp">

    <TextView
        android:id="@+id/tickToCountry"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#4E0E4E"
        android:text="To place" />

    <TextView
        android:id="@+id/tickFromCountry"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#4E0E4E"
        android:text="From place" />

    <TextView
        android:id="@+id/tickTransportType"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#4E0E4E"
        android:text="Transport Type" />


    <TextView
        android:id="@+id/tickPlace"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#4E0E4E"
        android:text="Place" />


    <TextView
        android:id="@+id/tickDepartureData"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#4E0E4E"
        android:text="Departure Date" />

    <TextView
        android:id="@+id/tickDepartureTime"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#4E0E4E"
        android:text="Departure Time" />

    <TextView
        android:id="@+id/tickArrivalData"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#4E0E4E"
        android:text="Arrival Date" />

    <TextView
        android:id="@+id/tickArrivalTime"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#4E0E4E"
        android:text="Arrival Time" />

</LinearLayout>