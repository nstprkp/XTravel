<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ticketclass"
    android:background="@drawable/background_card"
    android:elevation="6dp"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tickToCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#4E0E4E"
        android:text="To place"
        android:gravity="center"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />  <!-- Divider -->

    <TextView
        android:id="@+id/tickFromCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="#3A3A3A"
        android:text="From place"
        android:drawablePadding="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <TextView
        android:id="@+id/tickTransportType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="#3A3A3A"
        android:text="Transport Type"
        android:drawablePadding="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <TextView
        android:id="@+id/tickPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="#3A3A3A"
        android:text="Place"
        android:drawablePadding="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <TextView
        android:id="@+id/tickDepartureData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="#3A3A3A"
        android:text="Departure Date"
        android:drawablePadding="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <TextView
        android:id="@+id/tickDepartureTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="#3A3A3A"
        android:text="Departure Time"
        android:drawablePadding="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <TextView
        android:id="@+id/tickArrivalData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="#3A3A3A"
        android:text="Arrival Date"
        android:drawablePadding="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <TextView
        android:id="@+id/tickArrivalTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="#3A3A3A"
        android:text="Arrival Time"
        android:drawablePadding="8dp" />
</LinearLayout>
